<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Articles</title>
  </head>
  <body>
    <div>
      <h1>Articles</h1>
      <% articles.forEach((article) => { %>
      <div>
        <h2><%= article.title %></h2>
        <p><%= article.body %></p>
        <div>
          <a href="/articles/<%= article.id %>">View</a>
          <a href="/articles/d/<%= article.id %>">Delete</a>
        </div>
      </div>
      <% }); %>
    </div>
  </body>
</html>
